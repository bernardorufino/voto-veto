<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/splash_score_loser_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/splash_first_candidate_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <com.makeramen.RoundedImageView
                android:id="@+id/splash_score_first_candidate_image"
                android:layout_gravity="center_horizontal"
                style="@style/SplashScoreCandidateImage.First"
                />

            <TextView
                android:id="@+id/splash_score_first_candidate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/SplashScoreCandidateName"
                />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/splash_score_winner_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/splash_second_candidate_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <com.makeramen.RoundedImageView
                android:id="@+id/splash_score_second_candidate_image"
                android:layout_gravity="center_horizontal"
                style="@style/SplashScoreCandidateImage.Second"
                />

            <TextView
                android:id="@+id/splash_score_second_candidate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/SplashScoreCandidateName"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>